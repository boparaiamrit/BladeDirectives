{
	"name": "boparaiamrit/blade-directives",
	"type": "library",
	"description": "This package adds custom directives for the Laravel 5 blade engine.",
	"keywords": [
		"laravel",
		"blade",
		"directives",
		"template",
		"view",
		"render",
		"extend"
	],
	"homepage": "https://github.com/boparaiamrit/BladeDirectives.git",
	"license": "MIT",
	"authors": [
		{
			"name": "Amritpal Singh",
			"email": "boparaiamrit@gmail.com"
		}
	],
	"require": {
		"php": ">=5.5.0",
		"illuminate/support": "~5.1|~5.2|~5.3"
	},
	"require-dev": {
		"phpunit/phpunit": "^4.0|^5.0",
		"jenssegers/blade": "^1.0",
		"friendsofphp/php-cs-fixer": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"Wilsonpinto\\Blade\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Wilsonpinto\\Blade\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"cs": "php-cs-fixer fix src --level=psr2 --verbose",
		"test": "phpunit --verbose"
	}
}